{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "lib": [
      "es2019",
      "dom"
    ],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "src",
    "types": [
      "node"
    ],
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "removeComments": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}